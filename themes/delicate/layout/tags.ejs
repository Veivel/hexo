<% 
    page.layout = "tags";
    page.title = __("tags");

    let min_font = 14,
      max_font = 30,
      unit = 'px',
      amount = 900,
      start_color = "#30c2cf",
      end_color = "#003472";
%>

<section class="tags">
    <a href="/" class="back-button">Back</a>
    <h1><%= site.tags.length %> tag(s):</h1>
    <div class="tags-list">
        <%- tagcloud({
            min_font: min_font,
            max_font: max_font,
            amount: 999,
            unit: unit,
            color: true,
            start_color,
            end_color
        }) %>
    </div>
</section>